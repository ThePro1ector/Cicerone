<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/solidCircle"
    android:layout_margin="3dp"
    app:cardCornerRadius="8dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/nomeRecensore"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:fontFamily="@font/brown_regular"
            android:textColor="#000000"
            android:textSize="18sp"

            android:text="NomeR"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/cognomeRecensore"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:fontFamily="@font/brown_regular"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:text="CognomeR"
            android:textAlignment="center"
             />


        <TextView
            android:id="@+id/votoRecensione"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:fontFamily="@font/brown_regular"
            android:textColor="#000000"
            android:textSize="18sp"
            android:text="Voto"
            android:textAlignment="textEnd" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"

        >

        <TextView
            android:id="@+id/descrizioneRecensione"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/brown_regular"
            android:textColor="#000000"
            android:textSize="16sp"
            android:padding="10dp"
            android:text="Descrizione" />


    </LinearLayout>


</android.support.v7.widget.CardView>