<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/righe">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimary"
            android:id="@+id/righe_searchbar">

                <EditText
                    android:id="@+id/nPartecipanti_search"
                    android:layout_width="150dp"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/search_bar"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="3dp"
                    android:hint="Partecipanti"
                    android:textSize="14dp"
                    android:textColor="#808080"
                    android:inputType="number"
                    android:fontFamily="@font/brown_regular"
                    android:drawableLeft="@drawable/people"
                    android:layout_height="40dp">
                </EditText>
                <EditText
                    android:id="@+id/data_search"
                    android:layout_width="fill_parent"
                    android:elevation="2dp"
                    android:gravity="center"

                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="8dp"
                    android:padding="5dp"
                    android:background="@drawable/search_bar"
                    android:hint="Data"
                    android:textSize="14dp"
                    android:textColor="#808080"
                    android:fontFamily="@font/brown_regular"
                    android:drawableLeft="@drawable/calendar"
                    android:focusable="false"
                    android:layout_height="40dp">
                </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:background="@color/colorPrimary"
            >

                <Button
                    android:id="@+id/button_cerca"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/button"
                    android:fontFamily="@font/brown_regular"
                    android:textColor="#fff"
                    android:text="Cerca"
                    android:padding="0dp"
                    />
                <Button
                    android:id="@+id/button_annulla_cerca"
                    android:padding="0dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/button"
                    android:fontFamily="@font/brown_regular"
                    android:textColor="#fff"
                    android:text="Annulla"
                    />
        </LinearLayout>
</LinearLayout>