<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".VistaCicerone.FragmentConvalidaPresenze"
    >

        <TextView
            android:id="@+id/text_qr"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="16dp"
            android:textSize="24dp"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            android:fontFamily="@font/brown_regular"
            android:text="Convalida presenza"
            android:textAllCaps="true"
            android:textStyle="bold"
            />


        <com.dlazaro66.qrcodereaderview.QRCodeReaderView
            android:id="@+id/qrdecoderview"
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_below="@+id/text_qr"
            />

    <com.madminds.madminds.PointsOverlayView
        android:id="@+id/points_overlay_view"
        android:layout_width="match_parent"
        android:layout_margin="30dp"
        android:layout_height="320dp"
        android:layout_below="@+id/text_qr"
        />


    <ImageView
        android:id="@+id/flashlight"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:src="@drawable/flash_on"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        />

</RelativeLayout>
